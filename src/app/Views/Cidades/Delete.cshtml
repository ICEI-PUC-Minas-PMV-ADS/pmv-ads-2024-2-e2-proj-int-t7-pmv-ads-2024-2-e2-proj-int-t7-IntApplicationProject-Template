@model app.Models.Entities.Cidade

@{
    ViewData["Title"] = "Excluir Cidade";
}

<h2>Excluir Cidade</h2>

<div>
    <h4>Tem certeza que deseja excluir a cidade @Model.Name?</h4>
    <dl class="row">
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Estado</dt>
        <dd class="col-sm-10">@Model.Estado.Name</dd>

        <dt class="col-sm-2">Data de Criação</dt>
        <dd class="col-sm-10">@Model.CreatedAt.ToString("dd/MM/yyyy")</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
