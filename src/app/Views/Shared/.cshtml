            <p class="text-white fw-light mb-3 mt-2">&copy; 2024 EcoLogic - Todos os direitos reservados.</p>
            <div class="d-flex justify-content-center gap-3 mb-2">
                <img id="cel-icon" src="../../images/phone.png" alt="Phone" width="24" height="24">
                <img src="../../images/whatsapp.png" alt="Whatsapp" width="24" height="24">
                <img src="../../images/email.png" alt="Email" width="24" height="24">
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
