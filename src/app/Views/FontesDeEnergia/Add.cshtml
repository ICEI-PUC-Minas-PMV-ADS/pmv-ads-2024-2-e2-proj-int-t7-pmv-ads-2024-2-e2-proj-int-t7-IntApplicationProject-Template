@model app.Models.AddFonteDeEnergiaViewModel

@{
    Layout = "_ContentLayout";
}

<h1>Adicionar Fonte de Energia</h1>

<form method="post">
    <div>
        <label>Tipo</label>
        <input type="text" name="Tipo" />
    </div>

    <div>
        <label>Eficiência Média</label>
        <input type="number" step="0.01" name="EficienciaMedia" />
    </div>

    <button type="submit">Salvar</button>
</form>