@model app.Models.Entities.ProducaoDeEnergia

@{
    Layout = "_ContentLayout";
    ViewData["Title"] = "Excluir Produção de Energia";
}

<h2>@ViewData["Title"]</h2>

<h3>Tem certeza de que deseja excluir esta produção de energia?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Usina
        </dt>
        <dd class="col-sm-10">
            @Model.Usina.Nome
        </dd>
        <dt class="col-sm-2">
            Data de Produção
        </dt>
        <dd class="col-sm-10">
            @Model.DataProducao.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Energia Gerada (kW)
        </dt>
        <dd class="col-sm-10">
            @Model.EnergiaGeradaKW.ToString("N2")
        </dd>
        <dt class="col-sm-2">
            Eficiência Operacional (%)
        </dt>
        <dd class="col-sm-10">
            @(Model.EficienciaOperacional.HasValue ? Model.EficienciaOperacional.Value.ToString("N2") : "-")
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
    </form>
</div>