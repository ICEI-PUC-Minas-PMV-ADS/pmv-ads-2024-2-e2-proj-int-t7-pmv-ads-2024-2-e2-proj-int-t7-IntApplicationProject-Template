@using app.Models.ViewModels

@model RedefinirSenhaViewModel

@{
    Layout = "_MainLayout";
    ViewData["Title"] = "Redefinir Senha";
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <h2 class="text-center mb-4">Redefinir Senha</h2>

        <!-- Exibir mensagem de erro ou sucesso -->
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-info">
                @TempData["SuccessMessage"]
            </div>
        }

        <form asp-action="RedefinirSenha" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label for="NovaSenha">Nova Senha</label>
                <input asp-for="NovaSenha" type="password" class="form-control" />
                <span asp-validation-for="NovaSenha" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label for="ConfirmarSenha">Confirmar Senha</label>
                <input asp-for="ConfirmarSenha" type="password" class="form-control" />
                <span asp-validation-for="ConfirmarSenha" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="Token" />

            <button type="submit" class="btn btn-primary w-100">Redefinir Senha</button>
        </form>
    </div>
</div>
