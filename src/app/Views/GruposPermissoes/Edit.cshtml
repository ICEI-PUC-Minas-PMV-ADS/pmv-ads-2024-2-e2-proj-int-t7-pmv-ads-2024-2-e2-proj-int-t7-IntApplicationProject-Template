@model app.Models.ViewModels.GrupoPermissaoUpdateViewModel

@{
    Layout = "_ContentLayout";
    ViewData["Title"] = "Editar Grupo de Permissões";
}

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    
    <div class="form-group">
        <label asp-for="Nome">Nome</label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Permissões</label>
        <select asp-for="PermissoesSelecionadas" asp-items="Model.PermissoesDisponiveis" class="form-control" multiple>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</form>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('select[multiple]').select2();
        });
    </script>
}
