@model List<app.Models.ViewModels.GrupoPermissaoViewModel>

@{
    Layout = "_ContentLayout";
    ViewData["Title"] = "Grupos de Permissões";
}

<p>
    <a asp-action="Create" class="btn btn-primary">Novo Grupo</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Permissões</th>
            <th>Criado em</th>
            <th>Atualizado em</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nome</td>
                <td>@string.Join(", ", item.PermissoesNomes)</td>
                <td>@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@(item.UpdatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "-")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
