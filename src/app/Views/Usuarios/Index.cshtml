@model IEnumerable<app.Models.ViewModels.UsuarioListViewModel>

@{
    ViewData["Title"] = "Usuários";
    Layout = "_ContentLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Usuários</h1>
    <a asp-action="Create" class="btn btn-primary">Novo Usuário</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.ClienteNome)</th>
            <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.ClienteNome)</td>
                <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
